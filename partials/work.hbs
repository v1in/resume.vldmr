{{#if resume.work.length}}
  <section id="work">
    <h3>Work</h3>
    <div class="stack">
      {{#each resume.work}}
        <article>
          <header>
            <div class="spaced-list">
              <h4>{{name}}</h4>
              <span>
                <time datetime="{{startDate}}">{{formatDate startDate}}</time> â€“
                {{#if endDate}}<time datetime="{{endDate}}">{{formatDate endDate}}</time>{{else}}Present{{/if}}
              </span>
            </div>
            <div class="spaced-list">
              {{#position}}
                <strong>{{.}}</strong>
              {{/position}}
              {{#url}}
                <a href="{{.}}">{{formatURL .}}</a>
              {{/url}}
            </div>
          </header>
          {{#summary}}
            {{{markdown .}}}
          {{/summary}}
          {{#if highlights.length}}
            <h5>Highlights</h5>
            <ul>
              {{#highlights}}
                <li>{{.}}</li>
              {{/highlights}}
            </ul>
          {{/if}}
        </article>
      {{/each}}
    </div>
  </section>
{{/if}}
